<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="86dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/about"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:id="@+id/imageViewAbout"/>
    <TextView
            android:text="File name"
            android:layout_width="288dp"
            android:layout_height="51dp"
            android:id="@+id/textViewFileNameAbout"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewAbout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.294"/>
    <TextView
            android:text="Path"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:id="@+id/textView3"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAbout"
            android:layout_marginTop="12dp"/>
    <TextView
            android:text="File path"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:id="@+id/textViewPathAbout"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewFileNameAbout"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Size"
            android:layout_width="85dp"
            android:layout_height="46dp"
            android:id="@+id/textView5"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="12dp"/>
    <TextView
            android:text="File size"
            android:layout_width="284dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:id="@+id/textViewSizeAbout"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewPathAbout"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Changed"
            android:layout_width="84dp"
            android:layout_height="39dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="12dp"/>
    <TextView
            android:text="File change"
            android:layout_width="288dp"
            android:layout_height="39dp"
            android:id="@+id/textViewChanedAbout"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSizeAbout"
            android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>